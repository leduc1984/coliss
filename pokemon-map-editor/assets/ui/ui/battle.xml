<?xml version="1.0" encoding="UTF-8"?>
<themes>
	<!-- battle gui -->
	<theme name="battlegui" ref="-defaults">
		<param name="defaultGap"><dimension>2,2</dimension></param>
		<theme name="battle-text" ref="label" allowWildcard="true">
			<param name="font"><font>battle</font></param>
			<param name="border"><border>140,170,7,7</border></param>
		</theme>
		<theme name="label" ref="-defaults" allowWildcard="true">
			<param name="font"><font>mechabold</font></param>
			<param name="border"><border>0,0,7,0</border></param>
		</theme>
		<param name="border"><border>65,64,64,65</border></param>
		<theme name="ball-count" ref="-defaults">
			<param name="border"><border>0</border></param>
			<param name="defaultGap"><dimension>2,2</dimension></param>
			<param name="smallGap"><dimension>2,2</dimension></param>
			<param name="mediumGap"><dimension>2,2</dimension></param>
			<param name="largeGap"><dimension>2,2</dimension></param>
			<param name="namedGaps"><map/></param>
		</theme>
	</theme>

	<theme name="battle-ability" ref="-defaults">
		<param name="background"><image>battle-ability</image></param>
		<param name="minWidth"><int>272</int></param>
		<param name="maxWidth"><int>272</int></param>
		<param name="minHeight"><int>18</int></param>
		<param name="maxHeight"><int>18</int></param>
		<theme name="label" ref="-defaults" allowWildcard="true">
			<param name="font"><font>mechabold</font></param>
		</theme>
	</theme>

	<theme name="battle-ability-enemy" ref="-defaults">
		<param name="background"><image>battle-ability-flip</image></param>
		<param name="minWidth"><int>272</int></param>
		<param name="maxWidth"><int>272</int></param>
		<param name="minHeight"><int>18</int></param>
		<param name="maxHeight"><int>18</int></param>
		<theme name="label" ref="-defaults" allowWildcard="true">
			<param name="font"><font>mechabold</font></param>
		</theme>
	</theme>

	<theme name="battle-gui-enemy" ref="-defaults">
		<param name="background"><image>battle-ui-enemy</image></param>
	</theme>

	<theme name="battle-gui-float" ref="-defaults">
		<param name="background"><image>battle-ui-float</image></param>
	</theme>

	<theme name="battle-gui-self" ref="-defaults">
		<param name="background"><image>battle-ui-self</image></param>
		<param name="border"><border>0,0,1,0</border></param>
	</theme>

	<theme name="battle-gui-self-slim" ref="-defaults">
		<param name="background"><image>battle-ui-self-slim</image></param>
	</theme>

	<!-- Monster Name @ Health Bars -->
	<theme name="redlabel" ref="-defaults" allowWildcard="true">
		<param name="font"><font>mechabold</font></param>
		<param name="border"><border>0,0,7,0</border></param>
	</theme>

	<theme name="time-progressbar" ref="-defaults" allowWildcard="true">
		<param name=""><image>time-progressbar.*</image></param>
		<param name="border"><border>background.border</border></param>
		<param name="minWidth"><int>100</int></param>
		<param name="textAlignment"><enum type="alignment">CENTER</enum></param>
	</theme>

	<theme name="health-progressbar" ref="-defaults" allowWildcard="true">
		<param name=""><image>health-progressbar-green.*</image></param>
		<param name="border"><border>background.border</border></param>
		<param name="minWidth"><int>100</int></param>
	</theme>

	<theme name="health-progressbar-orange" ref="-defaults" allowWildcard="true">
		<param name=""><image>health-progressbar-orange.*</image></param>
		<param name="border"><border>background.border</border></param>
		<param name="minWidth"><int>100</int></param>
	</theme>

	<theme name="health-progressbar-red" ref="-defaults" allowWildcard="true">
		<param name=""><image>health-progressbar.*</image></param>
		<param name="border"><border>background.border</border></param>
		<param name="minWidth"><int>100</int></param>
	</theme>

	<theme name="xp-progressbar" ref="-defaults" allowWildcard="true">
		<param name=""><image>xp-progressbar.*</image></param>
		<param name="border"><border>background.border</border></param>
		<param name="minWidth"><int>100</int></param>
	</theme>

	<!-- Used for attack buttons @ Battle Frame -->
	<theme name="battle-move-button" ref="-defaults" allowWildcard="true">
		<param name="font"><font>mechabold</font></param>
		<param name="font2"><font>alphabeta-border</font></param>
		<param name="border"><border>10,10,8,8</border></param>
		<param name=""><image>button.*</image></param>
		<param name="textAlignment"><enum type="alignment">TOPLEFT</enum></param>
		<param name="textAlignment2"><enum type="alignment">BOTTOMRIGHT</enum></param>
		<param name="minWidth"><int>210</int></param>
		<param name="minHeight"><int>41</int></param>
		<theme name="eff-nve" ref="label">
			<param name=""><image>eff.nve.*</image></param>
			<param name="border"><border>0</border></param>
		</theme>
		<theme name="eff-se" ref="label">
			<param name=""><image>eff.se.*</image></param>
			<param name="border"><border>0</border></param>
		</theme>
		<theme name="eff-i" ref="label">
			<param name=""><image>eff.immune.*</image></param>
			<param name="border"><border>0</border></param>
		</theme>
		<theme name="eff-e" ref="label">
			<param name=""><image>eff.e.*</image></param>
			<param name="border"><border>0</border></param>
		</theme>
		<theme name="eff-status" ref="label">
			<param name=""><image>eff.status.*</image></param>
			<param name="border"><border>0</border></param>
		</theme>
	</theme>
	<theme name="battle-move-button-red" ref="battle-move-button" allowWildcard="true">
		<param name="font"><font>mechabold-red</font></param>
	</theme>
	<theme name="battle-move-button-green" ref="battle-move-button" allowWildcard="true">
		<param name="font"><font>mechabold-green</font></param>
	</theme>
	<theme name="battle-move-button-left" ref="battle-move-button" allowWildcard="true">
		<param name="textAlignment2"><enum type="alignment">LEFT</enum></param>
	</theme>

	<!-- Used for Return button @ Battle Frame -->
	<theme name="battle-button-return" ref="-defaults" allowWildcard="true">
		<param name="font"><font>alphabeta-border</font></param>
		<param name="border"><border>2,0,4,10</border></param>
		<param name=""><image>battle-button-return.*</image></param>
		<param name="textAlignment"><enum type="alignment">RIGHT</enum></param>
		<theme name="label" ref="label" allowWildcard="true">
			<param name="border"><border>2,4</border></param>
			<param name="font"><font>alphabeta</font></param>
		</theme>
		<theme name="label-button" ref="label" allowWildcard="true">
			<param name="border"><border>4,4,0,4</border></param>
			<param name="font"><font>alphabeta</font></param>
		</theme>
	</theme>
	<theme name="battle-button-confirm" ref="battle-button-return" allowWildcard="true">
		<param name=""><image>battle-button-confirm.*</image></param>
	</theme>

	<!-- Used for Battle Monster Switch buttons @ Battle Frame -->
	<theme name="battle-button" ref="-defaults" allowWildcard="true">
		<param name=""><image>battle-button-switch.*</image></param>
		<param name="font"><font>alphabeta-green</font></param>
		<param name="font2"><font>alphabeta-border</font></param>
		<param name="border"><border>7,0</border></param>
		<theme name="label" ref="label" allowWildcard="true">
			<param name="border"><border>3,4</border></param>
			<param name="font"><font>alphabeta-border</font></param>
		</theme>
		<param name="textAlignment"><enum type="alignment">CENTER</enum></param>
	</theme>

	<theme name="battle-button-ui" ref="-defaults" allowWildcard="true">
		<param name=""><image>ui-button.*</image></param>
		<param name="font"><font>alphabeta-small</font></param>
		<param name="font2"><font>alphabeta-small</font></param>
		<param name="border"><border>7,0</border></param>
		<theme name="label" ref="label" allowWildcard="true">
			<param name="border"><border>3,3</border></param>
			<param name="font"><font>alphabeta-small</font></param>
		</theme>
		<param name="textAlignment"><enum type="alignment">CENTER</enum></param>
	</theme>

	<!-- Item Icon -->
	<theme name="itemplate" ref="label" allowWildcard="true">
		<param name="background"><image>editfield.background</image></param>
	</theme>

	<theme name="battle-frame" ref="-defaults" allowWildcard="true">
		<param name="background"><image>label1.background</image></param>
	</theme>

	<!-- Theme used by various battle windows including the main window, skill learn dialog and item selection dialog -->
	<theme name="battle-panel" ref="-defaults" allowWildcard="true">

		<param name="background"><image>none</image></param>
		<param name="border"><border>207</border></param> <!--battle menue location?-->
		<param name="defaultGap"><dimension>2,2</dimension></param> <!--gap between battle menus-->
		<param name="smallGap"><dimension>8,8</dimension></param>
		<param name="mediumGap"><dimension>10,10</dimension></param>
		<param name="largeGap"><dimension>15,15</dimension></param>
		<param name="namedGaps"><map/></param>
		<theme name="dialoglayout" ref="-defaults">
			<param name="border"><border>0</border></param>
			<param name="defaultGap"><dimension>5,5</dimension></param>
			<param name="smallGap"><dimension>8,8</dimension></param>
			<param name="mediumGap"><dimension>10,10</dimension></param>
			<param name="largeGap"><dimension>15,15</dimension></param>
			<param name="namedGaps"><map/></param>
			<theme name="label-black" ref="-defaults" allowWildcard="true">
				<param name="font"><font>alphabeta-border</font></param>
				<param name="border"><border>0,0,25,0</border></param>
			</theme>
		</theme>
		<theme name="scrollpane" ref="scrollpane" allowWildcard="true">
			<param name="minWidth"><int>300</int></param>
			<param name="maxWidth"><int>300</int></param>
			<param name="maxHeight"><int>70</int></param>
			<param name="minHeight"><int>70</int></param>
			<theme name="dialoglayout" ref="-dialog">
				<param name="defaultGap"><dimension>0,0</dimension></param>
				<theme name="button" ref="-defaults" allowWildcard="true">
					<param name="font"><font>alphabeta-border</font></param>
					<param name="border"><border>2,0,4,10</border></param>
					<param name=""><image>button-small.*</image></param>
					<param name="textAlignment"><enum type="alignment">RIGHT</enum></param>
				</theme>
			</theme>
		</theme>
		<theme name="label-black" ref="-defaults" allowWildcard="true">
			<param name="font"><font>mechabold</font></param>
			<param name="minWidth"><int>155</int></param>
			<param name="textAlignment"><enum type="alignment">CENTER</enum></param>
		</theme>
		<theme name="label" ref="-defaults" allowWildcard="true">
			<param name="font"><font>alphabeta-border</font></param>
		</theme>
		<theme name="button" ref="-defaults" allowWildcard="true">
			<param name="font"><font>alphabeta-border</font></param>
			<param name="border"><border>2,0,4,10</border></param>
			<param name=""><image>button-small.*</image></param>
			<param name="textAlignment"><enum type="alignment">RIGHT</enum></param>
		</theme>
	</theme>

	<theme name="battle-panel-dark" ref="battle-panel" allowWildcard="true">
		<param name="background"><image>battle-area</image></param>
	</theme>

	<theme name="battle-fight" ref="rbattle" allowWildcard="true"/>
	<theme name="battle-switch" ref="rbattle" allowWildcard="true"/>
	<theme name="battle-bag" ref="rbattle" allowWildcard="true"/>
	<theme name="battle-run" ref="rbattle" allowWildcard="true"/>
	<theme name="battle-win" ref="rbattle" allowWildcard="true"/>
	<theme name="battle-shift" ref="rbattle" allowWildcard="true"/>

	<theme name="battle-ball" ref="rbattle" allowWildcard="true"/>
	<theme name="battle-bait" ref="rbattle" allowWildcard="true"/>
	<theme name="battle-rock" ref="rbattle" allowWildcard="true"/>
</themes>
